<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent" android:id="@+id/toolbar"
        android:background="#3F51B5"
        android:layout_height="58dp">

        <TextView
            android:text="Home" android:gravity="center"
            android:layout_width="match_parent" android:textColor="#ffffff"
            android:textSize="21sp"
            android:layout_height="match_parent" />

    </android.support.v7.widget.Toolbar>
    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_marginTop="56dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="56dp"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_height="wrap_content">
    <android.support.v7.widget.AppCompatEditText
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/search"

        />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/actv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llyt_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/acbtn_click"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:text="START"
                android:textSize="@dimen/text_size12"
                />
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/acbtn_click2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:text="save"
                android:textSize="@dimen/text_size12"
                />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>