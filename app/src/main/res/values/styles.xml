<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 默认title的自定义属性-->
    <declare-styleable name="title_widget_layout">
        <!-- 返回键的按钮显示-->
        <attr name="title_miv_back" format="reference"/>
        <!-- 返回文字的显示-->
        <attr name="title_tv_back" format="string"/>
        <!-- 标题文字的显示-->
        <attr name="title_text" format="string"/>
        <!-- 右边第一个图标的显示-->
        <attr name="title_miv_right1" format="reference"/>
        <!-- 右边第二个图标的显示-->
        <attr name="title_miv_right2" format="reference"/>
        <!-- 右边第一个文字的显示-->
        <attr name="title_tv_right3" format="string"/>
        <!-- 右边第二个文字的显示-->
        <attr name="title_tv_right4" format="string"/>
        <!-- Title的颜色-->
        <attr name="title_bg_color" format="reference|color"/>
        <!-- 设置电池缆的颜色-->
        <attr name="title_stu_color" format="reference|color"/>
    </declare-styleable>
    <style name="style_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.7</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="dialogdialog" parent="style_dialog">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Theme.NoTitleBar" parent="@style/Theme.Design.Light.NoActionBar">
    </style>
    <style name="MyTextInputLayout" >
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/c38</item>
    </style>
    <style name="LoginTextInputLayout" >
        <item name="android:textColor">@color/main_black</item>
        <item name="colorAccent">@color/main_black</item>
        <item name="colorControlNormal">@color/c38</item>
    </style>
    <style name="MyTextInputLayoutErr" >
        <item name="android:textColor">@color/red</item>
        <item name="colorAccent">@color/red</item>
        <item name="colorControlNormal">@color/red</item>
    </style>
    <style name="CustomTab" parent="Widget.Design.TabLayout" >
        <item name="tabIndicatorColor">@color/white</item>
        <!--<item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/red_main</item>-->
        <item name="tabBackground">@color/white</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>
</resources>
